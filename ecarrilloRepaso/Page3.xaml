<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ecarrilloRepaso.Page3">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Entry">
                <Setter Property="TextColor" Value="Green"/>
                <Setter Property="BackgroundColor" Value="Black"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    
    <ContentPage.Content>
        <StackLayout>
            
            <Label x:Name="lbUsuario" TextColor="Red" FontSize="16" HorizontalTextAlignment="End" />
            <Label Text="Ventana Tres" FontSize="24" HorizontalTextAlignment="Center"/>
            <Entry x:Name="txtDato" IsReadOnly="True"/>
            <Entry x:Name="txtEstudiante" IsReadOnly="True"/>
            
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>